  <div id="app" class="approve-main-content">
    <div class="approve-container">
      <h2>Order Approval Panel</h2>

      <div class="search-pagination"
        style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 18px; gap: 16px;">
        <input v-model="searchTerm" placeholder="Search by Order Code or Customer..." class="search-input"
          style="padding: 8px 12px; border: 1px solid #ccc; border-radius: 4px; min-width: 260px; font-size: 1em;" />
        <div class="pagination-controls" style="display: flex; align-items: center; gap: 8px;">
          <button @click="prevPage" :disabled="page === 1"
            style="padding: 6px 14px; border-radius: 4px; border: 1px solid #2563eb; background: #fff; color: #2563eb; font-weight: 600; cursor: pointer;"
            :style="{opacity: page === 1 ? 0.5 : 1}">Prev</button>
          <span style="font-weight: 600;">Page {{ page }} / {{ totalPages }}</span>
          <button @click="nextPage" :disabled="page === totalPages"
            style="padding: 6px 14px; border-radius: 4px; border: 1px solid #2563eb; background: #fff; color: #2563eb; font-weight: 600; cursor: pointer;"
            :style="{opacity: page === totalPages ? 0.5 : 1}">Next</button>
        </div>
      </div>

      <div class="approve-tabs">
        <button class="approve-tab-btn" :class="{ active: activeTab === 'all' }" @click="activeTab = 'all'">
          All ({{ orders.length }})
        </button>
        <button class="approve-tab-btn" :class="{ active: activeTab === 'created' }" @click="activeTab = 'created'">
          Pending ({{ orders.filter(o => o.status === 'created').length }})
        </button>
        <button class="approve-tab-btn" :class="{ active: activeTab === 'approved' }" @click="activeTab = 'approved'">
          Approved ({{ orders.filter(o => o.status === 'approved').length }})
        </button>
        <button class="approve-tab-btn" :class="{ active: activeTab === 'cancelled' }" @click="activeTab = 'cancelled'">
          Cancelled ({{ orders.filter(o => o.status === 'cancelled').length }})
        </button>
        <button class="approve-tab-btn" :class="{ active: activeTab === 'rejected' }" @click="activeTab = 'rejected'">
          Rejected ({{ orders.filter(o => o.status === 'rejected').length }})
        </button>
      </div>

      <div v-if="paginatedOrders.length">
        <!-- Wrap your table with a responsive container -->
        <div style="overflow-x:auto; width:100%;">
          <table>
            <thead>
              <tr>
                <th>Order Code</th>
                <th>Customer</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Date</th>
                <th>Payment Receipts</th>
                <th>Created By</th>
                <th>Confirmed By</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="order in paginatedOrders" :key="order._id">
                <td>{{ order.orderCode }}</td>
                <td>{{ order.customer?.name }}</td>
                <td>₦{{ order.total.toLocaleString(undefined, { minimumFractionDigits: 2 }) }}</td>
                <td>
                  {{ order.status }}
                  <button class="approve-action-btn reject" @click="openStatusModal(order)">Edit</button>
                </td>
                <td>{{ order.createdAt ? formatDate(order.createdAt) : 'Nil' }}</td>
                <td>
                  <div v-if="order.paymentReceipts && order.paymentReceipts.length">
