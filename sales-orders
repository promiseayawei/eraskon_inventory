                        formatDate(receipt.uploadedAt) }})
                        <a :href="receipt.url" download style="color:green; font-size: 0.85em;">Download</a>
                      </li>
                    </ul>
                    <button class="approve-action-btn approve" @click="reviewReceipts(order)">Review</button>
                  </div>
                  <div v-else>No receipts</div>
                </td>
                <td>{{ order.createdBy?.name || 'Nil' }}</td>
                <td>{{ order.confirmedBy?.name || 'Nil' }}</td>
                <td>
                  <button class="approve-action-btn approve">Approve</button>
                  <button class="approve-action-btn reject">Reject</button>
                </td>
              </tr>
            </tbody>
            <tfoot>
              <tr>
                <td colspan="2" style="font-weight:bold;">Total</td>
                <td style="font-weight:bold;">₦{{ totalAmount.toLocaleString(undefined, { minimumFractionDigits: 2 }) }}</td>
                <td colspan="6"></td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
      <div v-else>
        <p>No orders for this tab.</p>
      </div>
    </div>

    <div class="modal" v-if="showStatusModal" style="display: flex; align-items: center; justify-content: center;">
      <div class="modal-content"
        style="background: #fff; padding: 24px; border-radius: 8px; min-width: 300px;">
        <h3>Edit Order Status</h3>
        <label>Status:</label>
        <select v-model="statusToUpdate" style="margin-bottom: 16px; width: 100%; padding: 8px;">
          <option value="cancelled">Cancelled</option>
          <option value="rejected">Rejected</option>
        </select>
        <div style="margin-top: 12px;">
          <button class="approve-action-btn approve" @click="saveStatus">Save</button>
          <button class="approve-action-btn reject" @click="showStatusModal = false">Cancel</button>
        </div>
      </div>
    </div>

    <div class="modal" v-if="showReviewModal">
      <div class="modal-content">
        <h3>Review Order</h3>
        <p><strong>Order Code:</strong> {{ selectedOrder.orderCode }}</p>
        <ul>
          <li v-for="item in selectedOrder.items" :key="item._id">
            {{ item.productVariantName }} - Qty: {{ item.qty }} - Unit: ₦{{ item.unitPrice.toFixed(2) }}
          </li>
        </ul>
        <p><strong>Subtotal:</strong> ₦{{ selectedOrder.subTotal?.toFixed(2) }}</p>
        <p><strong>Tax:</strong> ₦{{ selectedOrder.tax?.toFixed(2) }}</p>
        <p><strong>Discount:</strong> ₦{{ calculateDiscount(selectedOrder.discounts) }}</p>
        <p><strong>Total:</strong> ₦{{ selectedOrder.total?.toFixed(2) }}</p>

        <div v-if="selectedOrder.paymentReceipts?.length">
          <h4>Payment Receipts:</h4>
          <div class="carousel-wrapper">
            <div v-for="r in selectedOrder.paymentReceipts" :key="r.url">
              <img :src="r.url" alt="Receipt Image" />
              <p><strong>Uploaded By:</strong> {{ formatUser(r.uploadedBy) }}</p>
              <p><strong>Date:</strong> {{ formatDate(r.uploadedAt) }}</p>
              <a :href="r.url" download>Download</a>
            </div>
          </div>
        </div>
        <button @click="showReviewModal = false">Close</button>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="config.js"></script>
  <script>
    new Vue({
      el: '#app',
      data: {
        orders: [],
        activeTab: 'created',
        showStatusModal: false,
        showReviewModal: false,
        selectedOrder: {},
        statusToUpdate: '',
        page: 1,
        pageSize: 10,
        searchTerm: '',
        API_BASE: window.BASE_URL || ''
      },
      computed: {
        filteredOrders() {
          let base = this.activeTab === 'all' ? this.orders : this.orders.filter(o => o.status === this.activeTab);
          if (!this.searchTerm) return base.slice().sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt));
          const search = this.searchTerm.toLowerCase();
          return base
            .filter(o => o.orderCode?.toLowerCase().includes(search) || o.customer?.name?.toLowerCase().includes(search))
            .slice()
            .sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt));
        },
        totalPages() {
          return Math.ceil(this.filteredOrders.length / this.pageSize);
        },
        paginatedOrders() {
          const start = (this.page - 1) * this.pageSize;
          return this.filteredOrders.slice(start, start + this.pageSize);
        },
        totalAmount() {
          return this.filteredOrders.reduce((sum, o) => sum + (o.total || 0), 0);
        }
      },
      methods: {
        async fetchOrders() {
          const token = localStorage.getItem('token');
          const res = await axios.get(`${this.API_BASE}/order`, {
            headers: { Authorization: `Bearer ${token}` }
          });
          this.orders = res.data;
        },
        formatUser(user) {
          return typeof user === 'object' ? user.name : user;
        },
        formatDate(date) {
          return new Date(date).toLocaleString();
        },
        reviewReceipts(order) {
          this.selectedOrder = order;
          this.showReviewModal = true;
        },
        openStatusModal(order) {
          this.selectedOrder = order;
          this.statusToUpdate = order.status;
          this.showStatusModal = true;
        },
        async saveStatus() {
          try {
            const token = localStorage.getItem('token');
            await axios.patch(
              `${this.API_BASE}/order/${this.selectedOrder._id}/status`,
              { status: this.statusToUpdate },
              { headers: { Authorization: `Bearer ${token}` } }
            );
            this.showStatusModal = false;
            this.fetchOrders();
          } catch (err) {
            console.error('Status update error', err);
            alert('Failed to update status');
          }
        },
        calculateDiscount(discounts) {
          if (!Array.isArray(discounts)) return 0;
          return discounts.map(d => d.amount || 0).reduce((a, b) => a + b, 0);
        },
        nextPage() {
          if (this.page < this.totalPages) this.page++;
        },
        prevPage() {
          if (this.page > 1) this.page--;
        }
      },
      mounted() {
        this.fetchOrders();
      },
      watch: {
        searchTerm() { this.page = 1; },
        activeTab() { this.page = 1; }
      }
    });
  </script>
</body>

</html>